{% extends 'base.html.j2' %}

{% block container %}
<!-- Sidebar -->
    <section id="sidebar">
        <div class="inner">
            <nav>
                <ul>
                    <li><a href="#intro">Introduction</a></li>
                    <li><a href="#research">Research</a></li>
                    <li><a href="#cv">CV</a></li>
                    <li><a href="#get in touch">Get in touch</a></li>
                </ul>
            </nav>
        </div>
    </section>

<!-- Wrapper -->
    <div id="wrapper">

        <!-- Intro -->
            <section id="intro" class="wrapper style1 fullscreen fade-up" style="background-image: linear-gradient(to top, rgba(46, 49, 65, 0.8), rgba(46, 49, 65, 0.8)), url('static/images/intro.jpg');">
                <div class="inner">
                    <img class="profile" src="{{ context.intro.profile_path }}" alt="">
                    <h1>{{ context.intro.title }}</h1>
                    <h2>{{ context.intro.subtitle }}</h2>
                    <p>{{ context.intro.statement }}</p>
                    <ul class="actions">
                        <li><a href="#research" class="button scrolly">See my research...</a></li>
                    </ul>
                </div>
                <div class="credit">
                    Photo by <a href="https://unsplash.com/@thenata?utm_source=unsplash&utm_medium=referral&utm_content=creditCopyText" target="_blank" rel="noopener noreferrer">Anastasia Taioglou</a> on <a href="https://unsplash.com/?utm_source=unsplash&utm_medium=referral&utm_content=creditCopyText" target="_blank" rel="noopener noreferrer">Unsplash</a>
                </div>
            </section>

        <!-- Research -->
            <section id="research" class="wrapper style2 spotlights">
                <div class="inner">
                    <h2>Research</h2>
                    {{ context.research.statement }}
                </div>
                {% for section in context.research.sections %}
                <section>
                    <div class="image">
                        <img src="{{ url_for('static', filename=section.image.path) }}" alt="" data-position="{{ section.image.data_position }}" />
                        <div class="credit">
                            {{ section.image.credit }}
                        </div>
                    </div>
                    <div class="content">
                        <div class="inner">
                            <h2>{{ section.header }}</h2>
                            {{ section.statement }}
                            <ul class="actions">
                                {% for action in section.actions %}
                                <li><a href="{{ action.href }}" class="button" {% if action.new_tab %}target="_blank" rel="noopener noreferrer"{% endif %}>{{ action.text }}</a></li>
                                {% endfor %}
                            </ul>
                        </div>
                    </div>
                </section>
                {% endfor %}
            </section>

        <!-- CV -->
            <section id="cv" class="wrapper style3 fade-up">
                <div class="inner">
                    <h2>CV</h2>
                    {{ context.cv.statement }}
                    <h3>{{ context.cv.published_header }}</h3>
                    <ul>
                        {% for manuscript in context.cv.manuscripts %}
                        <li>
                            {{ manuscript }}
                        </li>
                        {% endfor %}
                    </ul>
                    <div class="features">
                        {% for feature in context.cv.features %}
                        <section>
                            <span class="icon {{ feature.icon_class }}"></span>
                            <h3>{{ feature.header }}</h3>
                            <p>{{ feature.description }}</p>
                        </section>
                        {% endfor %}
                    </div>
                    <ul class="actions">
                        {% for action in context.cv.actions %}
                        <li><a href="{{ action.href }}" class="button" {% if action.new_tab %}target="_blank" rel="noopener noreferrer"{% endif %}>{{ action.text }}</a></li>
                        {% endfor %}
                    </ul>
                </div>
            </section>

        <!-- Get in touch -->
            <section id="get in touch" class="wrapper style1 fade-up">
                <div class="inner">
                    <h2>Get in touch</h2>
                    <p>{{ context.get_in_touch.description }}</p>
                    <ul class="contact">
                        {% for contact in context.get_in_touch.contacts %}
                        <li>
                            <a href="{{ contact.href }}" class="{{ contact.icon_class }}" {% if contact.new_tab %}target="_blank" rel="noopener noreferrer"{% endif %}>
                                <span class="label">{{ contact.text }}</span>
                            </a>
                        </li>
                        {% endfor %}
                    </ul>
                
